      "code": "function createStartPage() {\n    document.body.innerHTML = `\n        <div id=\"background\">\n            <h1>Whack-a-Mole</h1>\n            <h3>Select Game Duration</h3>\n            <form id=\"game-settings\">\n                <label><input type=\"radio\" name=\"time-limit\" value=\"10\" required> 10 seconds</label><br>\n                <label><input type=\"radio\" name=\"time-limit\" value=\"30\"> 30 seconds</label><br>\n                <label><input type=\"radio\" name=\"time-limit\" value=\"60\"> 1 minute</label><br>\n                <label><input type=\"radio\" name=\"time-limit\" value=\"300\"> 5 minutes</label><br>\n                <button type=\"button\" id=\"start-game\">Start Game</button>\n                <button type=\"button\" id=\"leaderboard\">Leaderboard</button>\n            </form>\n        </div>\n    `;\n\n    document.body.style.cssText = 'display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh; font-family: Arial, sans-serif; margin: 0;';\n    document.getElementById(\"start-game\").onclick = startGame;\n    document.getElementById(\"leaderboard\").onclick = showLeaderboard;\n\n    // Background styling\n    document.getElementById('background').style.cssText = `\n    background-image: url('https://i.postimg.cc/jd9sjXvs/land.jpg');\n    background-size: cover;\n    background-position: center;\n    width: 100%;\n    height: 100%;\n    display: flex;\n    flex-direction: column;\n    align-items: center;\n    justify-content: center;\n`;\n\n}\n\n// Start the game with the selected duration\nfunction startGame() {\n    const selectedTime = document.querySelector('input[name=\"time-limit\"]:checked');\n    if (!selectedTime) {\n        alert(\"Please select a game duration!\");\n        return;\n    }\n\n    const gameDuration = parseInt(selectedTime.value) * 1000;\n    createGamePage(gameDuration);\n}\n\n// Set up the game page\nfunction createGamePage(gameDuration) {\n    document.body.innerHTML = `\n        <div id=\"game-board\"></div>\n        <h3>Score: <span id=\"score\">0</span></h3>\n        <button id=\"start-btn\">Start Game</button>\n    `;\n\n    document.body.style.cssText = 'display: flex; flex-direction: column; align-items: center; margin-top: 50px;';\n    const gameBoard = document.getElementById('game-board');\n    gameBoard.style.cssText = 'display: grid; grid-template-columns: repeat(3, 100px); grid-gap: 10px; margin-top: 20px;';\n\n    for (let i = 1; i <= 9; i++) {\n        const hole = document.createElement('div');\n        hole.classList.add('hole');\n        hole.innerHTML = `<img src=\"https://i.postimg.cc/1zmY1x64/Normal.jpg\" alt=\"mole\" class=\"mole\" />`; // Normal image as default\n        gameBoard.appendChild(hole);\n    }\n\n    const holes = document.querySelectorAll('.hole');\n    holes.forEach(hole => {\n        hole.style.cssText = 'width: 100px; height: 100px; position: relative; border: 2px solid #999; cursor: pointer; overflow: hidden;';\n        hole.querySelector('.mole').style.cssText = 'width: 100px; height: 100px; position: absolute; bottom: -100px; transition: bottom 0.3s;';\n    });\n\n    document.getElementById('start-btn').onclick = () => {\n        if (!gameActive) {\n            startWhackAMole(gameDuration);\n        }\n    };\n}\n\nlet score = 0;\nlet moleTimer;\nlet gameActive = false;\nlet missedRounds = 0;\nlet moleImage = \"https://i.postimg.cc/1zmY1x64/Normal.jpg\";\nlet highScores = { \"10\": 0, \"30\": 0, \"60\": 0, \"300\": 0 }; // Stores personal high scores\n\nfunction showMole() {\n    const holes = document.querySelectorAll('.hole');\n    holes.forEach(hole => {\n        const mole = hole.querySelector('.mole');\n        mole.style.bottom = '-100px';\n        mole.src = moleImage;\n        mole.onclick = null;\n    });\n\n    const randomHole = holes[Math.floor(Math.random() * holes.length)];\n    const mole = randomHole.querySelector('.mole');\n    mole.src = moleImage;\n    mole.style.bottom = '0';\n    let moleHit = false;\n\n    mole.onclick = () => {\n        if (gameActive) {\n            moleHit = true;\n            score++;\n            document.getElementById('score').textContent = score;\n            mole.style.bottom = '-100px';\n            missedRounds = 0;\n            moleImage = 'https://i.postimg.cc/G2NMDHfs/angry.jpg';\n        }\n    };\n\n    setTimeout(() => {\n        if (!moleHit) {\n            missedRounds++;\n            moleImage = missedRounds >= 3 ? 'https://i.postimg.cc/1zmY1x64/Normal.jpg' : 'https://i.postimg.cc/ZR070rwS/happy.jpg';\n            mole.style.bottom = '-100px';\n        }\n    }, 800);\n}\n\nfunction startWhackAMole(gameDuration) {\n    score = 0;\n    document.getElementById('score').textContent = score;\n    gameActive = true;\n    missedRounds = 0;\n    moleImage = 'https://i.postimg.cc/1zmY1x64/Normal.jpg';\n\n    moleTimer = setInterval(showMole, 1000);\n    setTimeout(endGame, gameDuration);\n}\n\nfunction endGame() {\n    clearInterval(moleTimer);\n    gameActive = false;\n    const timeLimit = document.querySelector('input[name=\"time-limit\"]:checked').value;\n\n    if (score > highScores[timeLimit]) {\n        highScores[timeLimit] = score;\n        alert(`New high score! You scored ${score} in ${timeLimit} seconds.`);\n    } else {\n        alert(`Game Over! Your final score is: ${score}`);\n    }\n\n    moleImage = 'https://i.postimg.cc/1zmY1x64/Normal.jpg';\n}\n\nfunction showLeaderboard() {\n    document.body.innerHTML = `\n        <h2>Leaderboard</h2>\n        <div id=\"tabs\">\n            <button data-time=\"10\">10 sec</button>\n            <button data-time=\"30\">30 sec</button>\n            <button data-time=\"60\">1 min</button>\n            <button data-time=\"300\">5 min</button>\n        </div>\n        <div id=\"high-score-display\"></div>\n        <button onclick=\"createStartPage()\">Back to Start</button>\n    `;\n\n    document.getElementById('tabs').style.cssText = 'display: flex; justify-content: center; gap: 20px; margin-bottom: 20px;';\n    document.querySelectorAll('#tabs button').forEach(btn => {\n        btn.style.cssText = 'padding: 10px 20px; cursor: pointer;';\n        btn.onclick = () => showHighScore(btn.dataset.time);\n    });\n}\n\nfunction showHighScore(time) {\n    const highScore = highScores[time] || 0;\n    document.getElementById('high-score-display').innerHTML = `<h3>High Score for ${time} sec: ${highScore}</h3>`;\n}\n\n// Initialize the start page when the script loads\ncreateStartPage();\n",
